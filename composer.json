{
  "name": "php-pattern",
  "description": "Test project by code in PHP Pattern book.",
  "keywords": ["php", "pattern", "OOP"],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": ">=7.2",
    "ext-sqlite3": "*",
    "ext-pdo": "*",
    "ext-xmlwriter": "*",
    "ext-simplexml": "*",
    "ext-libxml": "*"
  },
  "authors": [
    {
      "name": "Constantine Kovalev",
      "email": "zilich08@gmail.com",
      "homepage": "https://kovalevcon.github.io/",
      "role": "Web Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Controllers\\": "Controllers/",
      "Database\\": "Database/",
      "Exceptions\\": "Models/Exceptions",
      "Models\\": "Models/",
      "Interfaces\\": "Models/Interfaces",
      "Traits\\": "Models/Traits"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "friendsofphp/php-cs-fixer": "^2.15",
    "phpmd/phpmd": "^2.6"
  }
}
